{
   "compilerOptions": {
       "rootDir": "src",
       "outDir": "./dist",
       "target": "es2019",
       "module": "commonjs",
       "moduleResolution": "node",
       "downlevelIteration": true,
       "inlineSources": true,
       "inlineSourceMap": true,
       "alwaysStrict": true,
       "declaration": true,
       "removeComments": false,
       "strict": true,
       "noImplicitReturns": true,
       "noUnusedLocals": true,
       "noUnusedParameters": false,
       "noImplicitAny": false,
       "noImplicitThis": false,
       "experimentalDecorators": true,
       "lib": ["es2017"]
   },
   "include": ["src/**/*.ts"]
}